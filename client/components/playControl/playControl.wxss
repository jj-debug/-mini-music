/* components/playControl/playControl.wxss */
.ctrl{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 110rpx;
  width: 100%;
  background-color: #eee;
  box-shadow: 0rpx -5rpx 40rpx -20rpx gray ;
  display: flex;
}
.al-pic{
  width: 110rpx;
  height: 110rpx;
  border-radius: 65rpx;
  margin-right: 20rpx;
  position: absolute;
  top: -10rpx;
  left: 10rpx;
}
.songName{
  position: absolute;
  margin-left: 130rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 350rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.buttons{
  height: 100%;
  position: absolute;
  right: 0;
  display: flex;
  align-items: center;
}
.buttons image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 25rpx;
}

/* 开始按钮和暂停按钮显示切换 */
.active{
  display: none;
}

/* 歌曲列表 */
.allPlayList{
  width: 83%;
  background-color: #fff;
  position: fixed;
  bottom: 125rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 40rpx;
  padding: 40rpx;
}
.scroll-view-item{
  margin-bottom: 30rpx;
}
.hidden{
  display: none;
}
.highlight-active{
  color: #31c27c;
}











/* 之前用fui组件留下的样式，已废 */
.fui-filter__icon {
	transition: all .15s linear;
}

.fui-icon__ani {
	transform: rotate(180deg);
}

.fui-list__cell {
	width: 100%;
}

.fui-select {
	flex: 1;
	height: 80rpx;
	padding: 32rpx;
	box-sizing: border-box;
	position: relative;
}

.fui-select::after {
	content: '';
	position: absolute;
	left: 0;
	top: 0;
	width: 200%;
	height: 200%;
	border: 1px solid #eee;
	transform: scale(.5);
	transform-origin: 0 0;
	pointer-events: none;
}
.fui-flex__center {
	display: flex;
	align-items: center;
	justify-content: center;
}

.fui-flex__between {
	display: flex;
	align-items: center;
	justify-content: space-between;
}