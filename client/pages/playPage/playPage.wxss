/* 专辑图片 */
.album{
  position: relative;
}
.album .pic{
  margin-top: 90rpx;
  padding: 50rpx 0 30rpx;
  width: 100%;
  height: 450rpx;
}

.float{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -10%);
  /* transform: translateY(); */
}
.active{
  display: none;
}

/* 歌曲信息 */
.info{
  display: flex;
  justify-content: center;
  font-size: 35rpx;
  margin: 50rpx 0;
}
.authors::after{
  content: '/';
}
.authors:last-child::after{
  content: none;
}
.singer{
  margin-top: 70rpx;
  padding: 0 30rpx;
  font-size: 40rpx;
}

/* 歌词 */
.lyric{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.lyric-item {
  height: 42rpx;
}
.lyric-active{
  color: skyblue;
}
